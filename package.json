{
  "name": "badge-roll",
  "version": "0.0.0",
  "description": "README Badge Configurator",
  "keywords": [
    "badges"
  ],
  "homepage": "https://github.com/agorischek/badge-roll",
  "repository": "https://agorischek@github.com/agorischek/badge-roll.git",
  "license": "MIT",
  "author": {
    "name": "Alex Gorischek",
    "email": "alex.gorischek@gmail.com"
  },
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "badge": "ts-node src/index.ts",
    "build": "rimraf lib && tsc",
    "format": "prettier . --write",
    "lint": "eslint . --fix && remark . --frail",
    "start": "ts-node src/index.ts",
    "start:lib": "tsc && node lib/index.js",
    "pretest": "eslint \"src/**\"",
    "test": "jest",
    "update": "ncu -u"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "remark . --frail",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "env": {
      "jest": true,
      "node": true
    },
    "plugins": [
      "prettier"
    ],
    "extends": [
      "xo",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended",
      [
        "remark-lint-list-item-indent",
        false
      ]
    ],
    "settings": {
      "emphasis": "*",
      "strong": "*"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/lib/"
    ]
  },
  "dependencies": {
    "cosmiconfig": "^7.0.0",
    "joi": "^17.4.0",
    "lodash.merge": "^4.6.2",
    "package-json": "^6.5.0",
    "parse-github-url": "^1.0.2",
    "path": "^0.12.7",
    "read-pkg": "^5.2.0",
    "remark-parse": "^9.0.0",
    "remark-stringify": "^9.0.1",
    "unified": "^9.2.0",
    "unist-util-find": "^1.0.2",
    "unist-util-find-after": "^3.0.0",
    "unist-util-is": "^4.0.4",
    "unist-util-parents": "^1.0.3",
    "unist-util-position": "^3.1.0",
    "unist-util-select": "^3.0.4",
    "url-parse": "^1.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.17",
    "@babel/preset-env": "^7.12.17",
    "@babel/preset-typescript": "^7.12.17",
    "@types/chai": "^4.2.15",
    "@types/jest": "^26.0.20",
    "@types/lodash.merge": "^4.6.6",
    "@types/parse-github-url": "^1.0.0",
    "@types/url-parse": "^1.4.3",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "babel-jest": "^26.6.3",
    "chai": "^4.3.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-xo": "^0.35.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "npm-check-updates": "^11.1.4",
    "prettier": "^2.2.1",
    "prettier-plugin-packagejson": "^2.2.10",
    "remark-cli": "^9.0.0",
    "remark-lint": "^8.0.0",
    "remark-preset-lint-recommended": "^5.0.0",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  },
  "engines": {
    "npm": ">= 4.0.0"
  }
}
