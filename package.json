{
  "name": "badge-roll",
  "version": "0.0.0",
  "description": "README Badge Configurator",
  "homepage": "",
  "author": {
    "name": "Alex Gorischek",
    "email": "alex.gorischek@gmail.com",
    "url": ""
  },
  "badgeconfig": [
    "loaded from package.json"
  ],
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "keywords": [
    "badges"
  ],
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "coveralls": "^3.1.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-xo": "^0.34.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "npm-check-updates": "^11.1.1",
    "prettier": "^2.2.1",
    "remark-cli": "^9.0.0",
    "remark-lint": "^8.0.0",
    "remark-preset-lint-recommended": "^5.0.0",
    "typescript": "^4.1.3"
  },
  "engines": {
    "npm": ">= 4.0.0"
  },
  "lint-staged": {
    "*.js": [
    "*.ts": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "remark . --frail",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "error"
    },
    "plugins": [
      "prettier"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended",
      [
        "remark-lint-list-item-indent",
        false
      ]
    ],
    "settings": {
      "emphasis": "*",
      "strong": "*"
    }
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier . --write",
    "lint": "remark . --frail",
    "pretest": "eslint .",
    "start": "node lib/index.js",
    "test": "jest",
    "update": "ncu -u"
  },
  "repository": "https://agorischek@github.com/louk-lang/louk.git",
  "jest": {
    "testEnvironment": "node"
  },
  "license": "MIT",
  "dependencies": {
    "cosmiconfig": "^7.0.0"
  }
}
